<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:text="패션 설정"
        android:textColor="@color/ourcolor"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:id="@+id/btn_daily"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_background"
            android:text="데일리"
            />
        <Button
            android:id="@+id/btn_casual"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="캐주얼" />
        <Button
            android:id="@+id/btn_street"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_background"
            android:text="스트릿" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_dandy"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="댄디"
            android:background="@drawable/button_background"
            />
        <Button
            android:id="@+id/btn_boyish"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="보이시"
            android:background="@drawable/button_background"/>
        <Button
            android:id="@+id/btn_outdoor"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="아웃도어"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_background"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_layered"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="레이어드"
            android:background="@drawable/button_background"/>
        <Button
            android:id="@+id/btn_vintage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="빈티지"
            android:background="@drawable/button_background"/>
        <Button
            android:id="@+id/btn_Amekaji"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="아메카지"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_background"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_choicecom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/ourcolor"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="선택완료"
        />



</LinearLayout>